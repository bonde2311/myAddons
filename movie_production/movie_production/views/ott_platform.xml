<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <!--   Durgesh Bagul & Gaurav Bonde (23/05/2025)  -->
<!--   Form View  for OTT Platforms  -->
    <record id="view_ott_platform_form" model="ir.ui.view">
        <field name="name">ott.platform.form</field>
        <field name="model">ott.platform</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="platform"/>
                        <field name="subscription_type"/>
                        <field name="website"/>
                        <field name="contact_email"/>
                        <field name="logo"/>
                        <field name="production_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--   Tree View  for OTT Platforms  -->
    <record id="view_ott_platform_tree" model="ir.ui.view">
        <field name="name">ott.platform.tree</field>
        <field name="model">ott.platform</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="platform"/>
                <field name="subscription_type"/>
                <field name="website"/>
            </tree>
        </field>
    </record>


     <!-- Action for OTT Platforms-->
    <record id="action_ott_platform" model="ir.actions.act_window">
        <field name="name">OTT Platforms</field>
        <field name="res_model">ott.platform</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Menu for OTT Platforms-->
    <menuitem id="menu_movie_ott_platform" name="OTT Platforms" parent="menu_realise_rights" sequence="2"
              action="action_ott_platform"/>

</odoo>
