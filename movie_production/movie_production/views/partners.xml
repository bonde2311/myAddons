  <!-- Distribution Partner -->
<record id="view_partner_distribution_form" model="ir.ui.view">
    <field name="name">partner.distribution.form</field>
    <field name="model">partner.distribution</field>
    <field name="arch" type="xml">
        <form string="Distribution Partner">
            <sheet>
                <!-- Hidden technical fields to control visibility -->
                <field name="is_theatre" invisible="1"/>
                <field name="is_ott" invisible="1"/>
                <field name="is_dvd" invisible="1"/>

                <group>
                     <field name="distribution_type"/>
                    <field name="name"/>
                    <field name="owner_name"/>
                    <field name="region"/>

                </group>

                <!-- Theatre Fields -->
                <group string="Theatre Details" attrs="{'invisible': [('is_theatre', '=', False)]}">
                    <field name="theatre_name"/>
                    <field name="theatre_location"/>
                    <field name="theatre_screen_count"/>
                    <field name="theatre_seating_capacity"/>
                    <field name="theatre_contact_number"/>
                    <field name="theatre_email"/>
                    <field name="theatre_manager_name"/>
                    <field name="theatre_opening_time"/>
                    <field name="theatre_closing_time"/>
                    <field name="theatre_has_3d_screen"/>
                    <field name="theatre_has_imax"/>
                </group>

                <!-- OTT Fields -->
                <group string="OTT Platform Details" attrs="{'invisible': [('is_ott', '=', False)]}">
                    <field name="platform"/>
                    <field name="ott_logo"/>
                    <field name="website"/>
                    <field name="app_available"/>
                    <field name="contact_email"/>
                    <field name="subscription_type"/>
                </group>

                <!-- DVD Fields -->
                <group string="DVD Distribution Details" attrs="{'invisible': [('is_dvd', '=', False)]}">
                    <field name="dvd_publisher_name"/>
                    <field name="dvd_release_date"/>
                    <field name="dvd_region_code"/>
                    <field name="dvd_format"/>
                    <field name="dvd_packaging_type"/>
                    <field name="dvd_copies_distributed"/>
                    <field name="dvd_manufacturer_contact"/>
                    <field name="dvd_manufacturer_phone"/>
                    <field name="dvd_manufacturer_email"/>
                    <field name="dvd_distribution_region"/>
                    <field name="dvd_notes"/>
                </group>
            </sheet>
        </form>
    </field>
</record>


