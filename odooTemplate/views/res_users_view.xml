<odoo>
    <record id="view_users_form_inherit_allowed_companies_below_roles" model="ir.ui.view">
        <field name="name">res.users.form.allowed.companies.below.roles</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <group>
                    <field name="allowed_company_ids"
                           widget="many2many_tags"
                           options="{'no_create': True}"
                           string="Legal Initiation Companies"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
