<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="legel_document_initiations_view_form" model="ir.ui.view">
        <field name="name">legel.document.initiations.view.form</field>
        <field name="model">legel.document.initiations</field>
        <field name="arch" type="xml">

            <form string="Sample">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>


                    <div style="text-align:center;">
                        <h2 style="color:#6A94A5; font-weight:700; background-color:#F5F5F5; font-size: 20px; padding:4px; border-radius:5px;margin-bottom:30px; margin-top: 0px;">
                            Legal Document Initiations Detail
                        </h2>
                    </div>
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group string="Information">
                        <group>

                            <field name="rel_company_ids" widget="many2many_tags"/>
                            <!--                            <field name="document_type"/>-->
                            <field name="document_type_id"/>
                            <field name="rel_partner_id"/>
                            <field name="subject"/>
                            <field name="purpose"/>
                            <field name="priority"/>
                            <field name="screening_complete"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="requested_delivery_date"/>
                            <field name="rel_requester_id"/>
                            <field name="legal_review_inprogress"/>
                            <field name="legal_review_completed"/>
                            <field name="signed"/>
                            <field name="countersigned"/>
                        </group>
                    </group>

                    <separator string="" style="border-top: 2px solid red; margin: 10px 0;"/>

                    <group string="Comments" colspan="2">
                        <group>
                            <field name="user_comments"/>
                        </group>
                        <group>
                            <field name="legal_comments"/>
                        </group>
                    </group>


                    <separator string="" style="border-top: 2px solid red; margin: 10px 0;"/>


                    <group string="Terms" colspan="2">
                        <group>
                            <field name="terms"/>
                            <field name="term_expiration_date"/>
                        </group>
                        <group>
                            <field name="confidentiality_terms"/>
                            <field name="confidentiality_term_expiration_date"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- Sample list view -->
    <record id="legel_document_initiations_view_list" model="ir.ui.view">
        <field name="name">legel.document.initiations.view.list</field>
        <field name="model">legel.document.initiations</field>
        <field name="arch" type="xml">
            <tree>
                  <field name="name"/>
                <field name="rel_company_ids" widget="many2many_tags"/>
                <!--                <field name="document_type"/>-->
                <field name="document_type_id"/>
                <field name="rel_partner_id"/>
                <field name="subject"/>
                <field name="purpose"/>
                <field name="priority"/>
                <field name="screening_complete"/>
            </tree>
        </field>
    </record>


    <!-- Action -->
    <record id="legel_document_initiations_action" model="ir.actions.act_window">
        <field name="name">Legal Document Initiations Details</field>
        <field name="res_model">legel.document.initiations</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <!-- Menus -->
    <menuitem name="Legal Document Initiations"
              id="legel_document_initiations_menu_root"/>

    <menuitem name="Legal Document"
              id="legel_document_initiations_menu"
              parent="legel_document_initiations_menu_root"
              action="legel_document_initiations_action"/>
</odoo>