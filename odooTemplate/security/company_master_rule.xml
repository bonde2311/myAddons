<odoo>

    <record id="rule_company_master_admin_access" model="ir.rule">
        <field name="name">Admin Full Access Company Master</field>
        <field name="model_id" ref="model_company_master"/>
        <field name="domain_force">[(1, '=', 1)]</field> <!-- No restrictions -->
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="rule_company_master_user_access" model="ir.rule">
        <field name="name">User Access Only Allowed Companies</field>
        <field name="model_id" ref="model_company_master"/>
        <field name="domain_force">[('id', 'in', user.allowed_company_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>


</odoo>



